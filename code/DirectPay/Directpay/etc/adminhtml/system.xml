<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="directpay" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>DirectPay</label>
                <comment>
                    <![CDATA[<a href="https://directpay.lk/" target="_blank">Click here to sign up for DirectPay</a>]]>
                </comment>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="merchantid" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Merchant Id</label>
                </field>
                <field id="privateKey" translate="label" type="textarea" sortOrder="3" showInDefault="1" showInWebsite="0" showInStore="1">
                    <label>Private Key</label>
                </field>
                <field id="publicKey" translate="label" type="textarea" sortOrder="4" showInDefault="1" showInWebsite="0" showInStore="1">
                    <label>Public Key</label>
                </field>
                <field id="apikey" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Api Key</label>
                </field>
                <field id="pay_mode" translate="label" type="select" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sandbox Mode</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

            </group>
            <!-- payment-group -->
        </section>
    </system>
</config>
